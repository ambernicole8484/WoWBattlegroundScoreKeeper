<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#008080 </item>
        <!-- Background color of buttons in the app -->
    </style>

    <style name="alliance_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">addOneForAlliance</item>
        <item name="android:background">@color/alliance_button_color</item>
        <item name="android:layout_marginTop">@dimen/button_spacing</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="horde_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">addOneForHorde</item>
        <item name="android:background">@color/horde_button_color</item>
        <item name="android:layout_marginTop">@dimen/button_spacing</item>
        <item name="android:minHeight">45dp</item>

    </style>

    <style name="team_name_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/team_name_color</item>
        <item name="android:textSize">@dimen/team_name_text_size</item>
    </style>
</resources>
